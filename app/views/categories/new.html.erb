<h1>
  Nouvelle catégorie
</h1>

<%= form_for @category do |f| %>

    <div class="form-group">
      <%= f.text_field :name, class: 'form-control', placeholder: 'Nom' %>
    </div>

    <div class="form-group">
      <%= f.text_field :slug, class: 'form-control', placeholder: 'Slug' %>
    </div>

    <div class="form-group">
      <button type="submit" class="btn btn-success">Créer la catégorie</button>
    </div>

<% end %>
<p>
  <a href="<%= categories_path %>" class="btn btn-primary">Revenir à la liste des catégories</a>
</p>